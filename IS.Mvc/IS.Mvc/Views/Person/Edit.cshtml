@using IS.Model.Item.Person;
@model PersonItem

@{
	ViewBag.Title = "Edit";
}

<style>
	table {
		border: 4px double black; /* Рамка вокруг таблицы */
		border-collapse: collapse; /* Отображать только одинарные линии */
	}

	td:first-child {
		text-align: left; /* Выравнивание по левому краю */
		background: #ccc; /* Цвет фона ячеек */
		padding: 5px; /* Поля вокруг содержимого ячеек */
		border: 1px solid black; /* Граница вокруг ячеек */
	}

	td {
		padding: 5px; /* Поля вокруг содержимого ячеек */
		border: 1px solid black; /* Граница вокруг ячеек */
	}
</style>

<h2>Редактироание персональных данных человека</h2>

@using (@Html.BeginForm("Update", "Person"))
{
	@Html.HiddenFor(m => Model.Id)

	<table class="table person">
		<tr>
			<td>Фамилия</td>
			<td>@Html.EditorFor(m => Model.LastName)</td>
		</tr>
		<tr>
			<td>Имя</td>
			<td>@Html.EditorFor(m => Model.FirstName)</td>
		</tr>
		<tr>
			<td>Отчество</td>
			<td>@Html.EditorFor(m => Model.FatherName)</td>
		</tr>
		<tr>
			<td>Дата Рождения</td>
			<td>@Html.EditorFor(m => Model.Birthday)</td>
		</tr>
	</table>
	<input type="submit" value="Сохранить"/><br/>
	@Html.ActionLink("Просмотр записи о человеке", "Index", new { id = Model.Id })<br />
	@Html.ActionLink("Отмена", "Index", new { id = Model.Id })
}
@Html.ActionLink("Просмотр списка людей", "List")
