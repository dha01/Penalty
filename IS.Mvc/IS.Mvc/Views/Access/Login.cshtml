@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>



@using (Html.BeginForm("LoginByLoginAndPassword", "Access"))
{
	<table>
		@if (ViewBag.Message != null)
		{
			<tr>
				<td colspan="2" style="background-color: #f08080">
					<label>@ViewBag.Message</label>
				</td>
			</tr>
		}
		<tr>
			<td>
				<label>Логин</label>
			</td>
			<td>
				<input type="text" name="login" />
			</td>
		</tr>
		<tr>
			<td>
				<label>Пароль</label>
			</td>
			<td>
				<input type="password" name="password" />
			</td>
		</tr>
		<tr>
			<td colspan="2">
				@Html.ActionLink("Зарегистрироваться", "Registr")
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<input type="submit" value="Вход"/>
			</td>
		</tr>
		<input type="hidden" name="remember" value="false" />
	</table>
}