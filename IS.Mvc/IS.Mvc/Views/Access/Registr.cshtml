@{
    ViewBag.Title = "Registr";
}

<h2>Registr</h2>

@using (Html.BeginForm("RegistrByLoginAndPasword", "Access"))
{
	<table>
		<tr>
			<td>
				<label>Логин</label>
			</td>
			<td>
				<input type="text" name="login"/>
			</td>
		</tr>
		<tr>
			<td>
				<label>Пароль</label>
			</td>
			<td>
				<input type="password" name="password" />
			</td>
		</tr>
		<tr>
			<td>
				<label>Повтор пароля</label>
			</td>
			<td>
				<input type="password" name="repeat_password" />
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<input type="submit" value="Зарегистрироваться"/>
			</td>
		</tr>		
	</table>
}
