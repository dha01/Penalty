@using IS.Model.Item.Car;
@using IS.Mvc.Models
@model CarItem

@{
	ViewBag.Title = "Index";
}

<style>
	table {
		border: 4px double black; /* Рамка вокруг таблицы */
		border-collapse: collapse; /* Отображать только одинарные линии */
	}

	td:first-child {
		text-align: left; /* Выравнивание по левому краю */
		background: #ccc; /* Цвет фона ячеек */
		padding: 5px; /* Поля вокруг содержимого ячеек */
		border: 1px solid black; /* Граница вокруг ячеек */
	}

	td {
		padding: 5px; /* Поля вокруг содержимого ячеек */
		border: 1px solid black; /* Граница вокруг ячеек */
	}
</style>

<table class="table car">
	<tr>
		<td>Дата выпуска</td>
		<td>@Model.ReleaseDate</td>
	</tr>
	<tr>
		<td>Марка автомобиля</td>
		<td>@Model.Brand</td>
	</tr>
	<tr>
		<td>Описание</td>
		<td>@Model.Mem</td>
	</tr>
	<tr>
		<td>Заводской номер</td>
		<td>@Model.Vin</td>
	</tr>
	<tr>
		<td>Цена</td>
		<td>@Model.Price</td>
	</tr>
	<tr>
		<td>Цвет</td>
		<td>@Model.Color</td>
	</tr>
</table>
@Html.ActionLink("Просмотр списка автомобилей", "List")<br />
@if (Access.CheckRole("Car.Updater"))
{
	@Html.ActionLink("Редактировать", "Edit", new { id = Model.Id })
}